    -->

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#FF0"
        android:text="동해물과 백두산이 마르고 닳도록 하느님이 보우하사 우리나라 만세"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
