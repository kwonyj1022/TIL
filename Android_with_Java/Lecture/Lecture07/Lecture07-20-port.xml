<?xml version="1.0" encoding="utf-8"?>

<!-- port\activity_main.xml 파일 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이름을 입력하세요."
            android:id="@+id/edit_text"/>   <!-- id 추가 필수 -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="저장"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="액티비티 데이터 복원"
        android:textStyle="bold"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자동 복원 기능을 가진 뷰\n - 대상: TextView와 그것의 하위 뷰\n - 조건: 레이아웃 XML에 뷰의 ID 추가\n - 비활성화: setSaveEnabled(false)\n"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="액티비티 실행"
        android:textStyle="bold"
        android:textSize="17dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" onCreate() \n Bundle : null \n onStart() \n onResume() \n"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="화면 회전하면"
        android:textStyle="bold"
        android:textSize="17dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" onPause() \n onStop() \n onSaveInstanceState() \n onDestroy() \n onCreate() \n Bundle : not null \n onStart() \n onRestoreInstanceState() \n onResume() \n"/>

</LinearLayout>